@rendermode InteractiveAuto

<div class="container p-0">
    <EditForm Model="@_model" OnValidSubmit="HandleSubmit" AdditionalAttributes="_formAttr">
        <DataAnnotationsValidator/>
        <!-- Row for the first and last name inputs -->
        <div class="row mb-3 gy-3">
            <div class="col-md">
                <div class="form-floating">
                    <InputText type="text" class="form-control" id="firstName" placeholder="First Name"
                               @bind-Value="_model.FirstName"/>
                    <label for="firstName">First Name*</label>
                </div>
            </div>
            <div class="col-md">
                <div class="form-floating">
                    <InputText type="text" class="form-control" id="lastName" placeholder="Last Name"
                               @bind-Value="_model.LastName"/>
                    <label for="lastName">Last Name*</label>
                </div>
            </div>
        </div>

        <!-- Row for phone number and email inputs -->
        <div class="row mb-3 gy-3">
            <div class="col-md">
                <div class="form-floating">
                    <InputText type="tel" class="form-control" id="phoneNumber" placeholder="Phone Number"
                               @bind-Value="_model.Phone"/>
                    <label for="phoneNumber">Phone Number*</label>
                </div>
            </div>
            <div class="col-md">
                <div class="form-floating">
                    <InputText type="email" class="form-control" id="email" placeholder="Email"
                               @bind-Value="_model.Email"/>
                    <label for="email">Email*</label>
                </div>
            </div>
        </div>

        <!-- Message input -->
        <div class="form-floating mb-3">
            <InputTextArea class="form-control" placeholder="Leave a message here" id="message"
                      style="height: 100px" @bind-Value="_model.Message"></InputTextArea>
            <label for="message">Your Message*</label>
        </div>
        
        <ValidationSummary/>
        
        <div class="d-grid col">
        <button class="btn btn-primary mt-4 py-3 fw-bold" type="submit">
            Submit
        </button>
        </div>
    </EditForm>

    @if (_formSubmitted)
    {
        <div class="alert alert-success mt-4">
            Thank you for contacting us! We will get back to you shortly.
        </div>
    }
</div>